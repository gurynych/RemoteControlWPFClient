<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ResourceDictionary.MergedDictionaries>
        <md:BundledTheme BaseTheme="Dark"
                         PrimaryColor="DeepPurple"
                         SecondaryColor="Lime" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.DeepPurple.Primary.xaml" />
            </ResourceDictionary.MergedDictionaries>
                    
            <SolidColorBrush x:Key="MaterialDesign.Brush.Primary.Light" Color="#fff" />
            <SolidColorBrush x:Key="MaterialDesign.Brush.Primary" Color="#eee" />
            <SolidColorBrush x:Key="MaterialDesign.Brush.Primary.Dark" Color="#ddd" />
            <SolidColorBrush x:Key="MaterialDesign.Brush.Primary.Foreground" Color="#212529"/>
        </ResourceDictionary>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.Lime.Secondary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="MaterialDesign.Brush.Secondary.Light" Color="#303030"/>
            <SolidColorBrush x:Key="MaterialDesign.Brush.Secondary" Color="#212529"/>
            <SolidColorBrush x:Key="MaterialDesign.Brush.Secondary.Dark" Color="#000"/>
            <SolidColorBrush x:Key="MaterialDesign.Brush.Secondary.Foreground" Color="#212529"/>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>